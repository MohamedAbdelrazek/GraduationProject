<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oneteam.graduationproject.SkillsActivity">

    <EditText
        android:id="@+id/add_skill_name_edt_txt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_border"
        android:gravity="center"
        android:hint="Write Your Skills"
        android:textSize="20sp" />

    <Button
        android:id="@+id/add_skill_btn"
        android:layout_width="78dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/add_skill_name_edt_txt"
        android:gravity="center"
        android:text="Add"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skills_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_skill_btn"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />

</RelativeLayout>
